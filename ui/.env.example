# Example environment variables for development
# Copy this to .env and fill in your actual values

# Twitch Configuration
# See ui/docs/TWITCH_SETUP_SIMPLE.md for setup instructions
TWITCH_CLIENT_ID=your_app_client_id_from_dev_twitch_tv
TWITCH_BOT_TOKEN=oauth:your_access_token_here
TWITCH_CHANNEL=your_channel_name
TWITCH_PREFIX=!

# MIDI API Configuration
# Device service handles authentication and MIDI messages
MIDI_DEVICE_URL=http://192.168.68.50:5000
# Data service handles MIDI data queries (optional, defaults to device URL)
MIDI_DATA_URL=http://192.168.68.50:5001
MIDI_API_TIMEOUT=30

# MIDI Authentication
MIDI_CLIENT_ID=localhost
MIDI_CLIENT_SECRET=your_midi_client_secret_here

# MIDI Device Configuration
MIDI_DEVICE_NAME=One Series Ventris Reverb

BOT_NAME=EightBitSaxBot
LOG_LEVEL=INFO